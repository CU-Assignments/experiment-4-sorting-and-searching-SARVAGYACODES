class Solution {
    public int firstBadVersion(int n) {
        int left = 1, right = n;
        while (left < right) {
            int mid = left + (right - left) / 2;
            if (isBadVersion(mid)) {
                right = mid;
            } else {
                left = mid + 1;
            }
        }
        return left;
    }
    
    // Mock API method for compilation purposes
    private boolean isBadVersion(int version) {
        return true; // Placeholder implementation
    }
}
